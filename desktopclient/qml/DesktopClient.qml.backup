import QtQuick 2.1
import QtQuick.Controls 1.0
import QtQuick.Layouts 1.0
import QtQuick.Controls.Styles 1.0
import "views" as Views
import "panel" as Panel

ApplicationWindow {
    id : bigthing
    width: 1200
    height : 900
    color : "light grey"
    property int maxPull : 500

    menuBar : MenuBar {
        id : mainMenu
        Menu {
            title: "Dummy 2"
            MenuItem { text: "Open..." }
            MenuItem { text: "Close" }
        }

        Menu {
            title: "Dummy 1"
            MenuItem { text: "Cut" }
            MenuItem { text: "Copy" }
            MenuItem { text: "Paste" }
        }
    }

    Rectangle {
        id : commLine;
        width : parent.width
        height : 32
        color : "#DDDDDD"
        TextField {
            id: t3
            anchors.fill: parent
            anchors.leftMargin: 5
            anchors.topMargin: 5
            anchors.bottomMargin: 5
            anchors.rightMargin: 40
            placeholderText: "This is a placeholder for a TextField"
            width: 200
        }
    }

    SplitView {
        orientation: Qt.Horizontal
        anchors.top : commLine.bottom
        width : parent.width
        height : bigthing.height - statusBar.height - commLine.height
        Rectangle {
            width : 300
            border.width: 1
            color: "light blue"
            Rectangle {
                y : -parent.width / 2 + parent.height/2 +2
                x : -parent.height / 2 + parent.width/2
                width : parent.height
                height : parent.width
                rotation: 90
                color : "white"

                TabView {
                    anchors.fill : parent
                    Tab {
                        title : "Bla"
                        Rectangle {
                            y : parent.width / 2 - parent.height/2 +2
                            x : parent.height / 2 - parent.width/2
                            width : parent.height
                            height : parent.width
                            rotation: -90
                            Text  {
                                text: "Hello World!"
                                font.family: "Helvetica"
                                font.pointSize: 24
                                color: "red"
                            }
                        }
                    }
                    Tab {
                        title : "Grid view"
                    }
                    Tab {
                        title : "Properties"
                    }
                }
            }


        }
        Rectangle {
            id: centerItem
            Layout.minimumWidth: 50
            Layout.fillWidth: true
            color: "light grey"
            SplitView {
                orientation: Qt.Vertical
                anchors.fill : parent
                Rectangle {
                      anchors.top : parent.top
                      width : parent.width
                      height : 600

                    TabView {
                        anchors.fill: parent
                        Tab {
                            title : "World"
                        }
                        Tab {
                            title : "Another container"
                        }
                    }
                }
                Rectangle {
                    Layout.minimumHeight: 100
                    Layout.fillHeight: true
                    width : parent.width
                    Rectangle {
                        id : previewBox
                        width : 350
                        height : parent.height
                        anchors.left: parent.left
                        border.width: 1
                        Rectangle {
                            anchors.left: parent.left
                            anchors.right: parent.right
                            anchors.top : parent.top
                            height : 25
                            border.width: 1
                        }
                    }
                    Rectangle {
                        height : parent.height
                        anchors.left: previewBox.right
                        anchors.right: parent.right
                        border.width: 1
                        Rectangle {
                            anchors.left: parent.left
                            anchors.right: parent.right
                            anchors.top : parent.top
                            height : 25
                            border.width: 1
                        }
                    }
                }
            }
        }
    }

    statusBar: StatusBar {
        id : statusB
        RowLayout {
            Label { text: "Read Only" }
            Label { text: "More text" }
        }
    }
}
